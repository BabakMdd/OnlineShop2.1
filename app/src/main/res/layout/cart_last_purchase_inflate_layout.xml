<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="120dp" android:id="@+id/cart_paid_click" >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="95dp"
        style="@style/MyCardViewStyle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

         <ImageView
             android:id="@+id/cart_last_img"
             android:layout_width="70dp"
             android:layout_height="950dp"
             android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/cart_last_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaaaaaa"
                android:layout_alignBottom="@+id/cart_last_img"
                android:layout_alignStart="@+id/cart_last_disc" />

            <TextView
                android:id="@+id/cart_last_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaaaaa"
                android:layout_alignBaseline="@+id/cart_last_counter"
                android:layout_alignBottom="@+id/cart_last_counter"
                android:layout_alignStart="@+id/cart_last_price" />

            <TextView
                android:id="@+id/cart_last_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaaaaaa"
                android:layout_marginEnd="16dp"
                android:layout_alignBaseline="@+id/cart_last_disc"
                android:layout_alignBottom="@+id/cart_last_disc"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/cart_last_disc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaaaaaaa"
                android:layout_alignTop="@+id/cart_last_img"
                android:layout_alignStart="@+id/cart_last_img"
                android:layout_marginStart="61dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>